{
  "compilerOptions": {
    "target": "es2016",                             
    /* Modules */
    "module": "commonjs",
    "baseUrl": "src",                              
    "esModuleInterop": true,                           
    "outDir": "dist/",         
    "forceConsistentCasingInFileNames": true,           
    "strict": false,                                      
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  
  "include": [
    "src/**/*"
  ],
}
